<div class="container">
  <div class="row">
    <div class="col-lg-4 col-md-6 ml-auto mr-auto">
      <h1 class="text-center form-header">Sign Up</h1>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.text_field :username, autofocus: true, class: 'form-control', placeholder: "Username" %>
        </div>

        <div class="form-group">
          <%= f.email_field :email, autofocus: false, class: 'form-control', placeholder: "Email Address" %>
          <small id="email_help" class="form-text text-muted">
            We require your email to enable you to reset your password if you forget it.
            We'll never share your email with anyone else or send you email unrelated
            to app functionality (i.e. no newsletters or sales emails).
          </small>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password' %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Confirm Password' %>
          <small id="email_help" class="form-text text-muted">
            Your password is protected using industry standard encryption
            (<a href="https://en.wikipedia.org/wiki/Bcrypt">bcrypt</a>). This
            encryption is implemented via the popular
            <a href="https://rubygems.org/gems/devise/versions/4.7.2">Devise</a>
            library (76,000,000+ downloads) for Ruby on Rails, the web framework
            this site is built with.
          </small>
        </div>

        <div class="form-group">
          <%= f.submit "Sign up", class: "btn btn-primary btn-block btn-lg" %>
        </div>
      <% end %>

      <hr>
      <div class="text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
