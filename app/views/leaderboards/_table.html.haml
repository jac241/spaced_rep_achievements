%table#leaderboard_table.table
  %thead
    %tr
      %th{scope: "col"} Rank
      %th{scope: "col"} Username
      %th{scope: "col"} Score
      %th{scope: "col"} Top Scoring Medals
  %tbody
    - leaderboard.entries.each do |entry|
      %tr
        %th{scope: "row"}= entry.family_rank
        %td= entry.username
        %td= entry.total_score
        %td
          - entry.top_medals_for_user.each do |top_medal|
            = top_medal.achievements_count
            = image_tag medal_image_path(top_medal.medal), title: top_medal.medal.name, size: 28


